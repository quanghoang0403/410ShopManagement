<UserControl x:Class="_410ShopManagement._401UC.MenuViewItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_410ShopManagement._401UC"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d">
    <StackPanel Orientation="Horizontal" Margin="10 0">
        <materialDesign:PackIcon x:Name="icon" Foreground="{StaticResource secondTextForeground}"
                                                     Width="30" Height="30" 
                                                     Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock x:Name="text" Foreground="{StaticResource secondTextForeground}"
                                       FontSize="20"
                                       Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </StackPanel>
</UserControl>
